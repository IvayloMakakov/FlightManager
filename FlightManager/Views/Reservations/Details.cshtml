@model FlightManager.Models.Reservation

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsConfirmed)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsConfirmed)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Flight)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Flight.FlightId)
        </dd>
        <dt class="col-sm-2">
            Passangers
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Passengers)
            <hr class="mb-0" />
            <div>
                <ul class="list-group list-group-flush ">
                    @foreach (var (passenger, index) in Model.Passengers.Select((value, i) => (value, i)))
                    {
                        <li class="list-group-item">@(index + 1).  <strong>@passenger.Passanger.EGN</strong> @passenger.Passanger.FirstName @passenger.Passanger.MiddleName @passenger.Passanger.LastName </li>
                    }
                </ul>
            </div>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ReservationId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
