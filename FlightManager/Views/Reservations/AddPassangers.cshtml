@model FlightManager.ViewModels.PassangerReservationViewModel.PassangerReservationViewModel

@{
    ViewData["Title"] = "PassengerReservation";
}


<h1>Add a passanger to reservation</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">Seats on this flight </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Normal <strong>@ViewData["RegularSeats"]</strong></li>
                    <li class="list-group-item">Business <strong>@ViewData["BusinessSeats"]</strong></li>
                </ul>
                <p class="mt-2">*Seats cannot be reserved until email is confirmed.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <form asp-action="AddPassengers">
            <input asp-for="CurrentCount" type="hidden" class="form-control" />
            <input asp-for="PassengerCapacity" type="hidden" class="form-control" />
            <input asp-for="ReservationId" type="hidden" class="form-control" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EGN" class="control-label">ЕГН</label>
                <input asp-for="EGN" class="form-control" />
                <span asp-validation-for="EGN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">FirstName</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MiddleName" class="control-label">MiddleName</label>
                <input asp-for="MiddleName" class="form-control" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">LastName</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">PhoneNumber</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nationality" class="control-label">Nationality</label>
                <input asp-for="Nationality" class="form-control" />
                <span asp-validation-for="Nationality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ticketSelect">Ticket type</label>
                <select asp-for="TicketType" class="form-control">
                    <option value="1">Normal</option>
                    <option value="2">Business</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
